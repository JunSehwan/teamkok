{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "/**",
        "destination": "/index.html",
        "dynamicLinks": true
      },
      { "source": "/board/**", "dynamicLinks": true }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
